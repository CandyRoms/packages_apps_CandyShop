<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:key="lockscreen"
        android:layout="@layout/tab" >

    <PreferenceCategory
        android:id="@+id/lockscreen_tab_header"
        android:layout="@layout/tab_header_preference_category"
        android:title="@string/lockscreen_aisle_header" />

        <org.candy.candyshop.preference.SystemSettingSwitchPreference
            android:key="lockscreen_battery_info"
            android:title="@string/lockscreen_battery_info_title"
            android:summary="@string/lockscreen_battery_info_summary"
	        android:defaultValue="false" />

        <org.candy.candyshop.preference.GlobalSettingSwitchPreference
            android:key="wake_when_plugged_or_unplugged"
            android:title="@string/wakeup_when_plugged_unplugged_title"
            android:summary="@string/wakeup_when_plugged_unplugged_summary"
            android:defaultValue="true" />

    <PreferenceCategory
        android:key="lockscreen_clock_category"
        android:title="@string/lockscreen_clock_category_title" >

        <ListPreference
            android:key="lock_clock_fonts"
            android:title="@string/lock_clock_font_title"
            android:dialogTitle="@string/lock_clock_font_dialog_title"
            android:entries="@array/lock_clock_fonts_entries"
            android:entryValues="@array/lock_clock_fonts_values"
            android:summary="%s"
            android:defaultValue="28"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="ls_gestures"
        android:title="@string/lockscreen_gestures_category_title" >

        <org.candy.candyshop.preference.SystemSettingSwitchPreference
            android:key="double_tap_sleep_lockscreen"
            android:title="@string/double_tap_sleep_lockscreen_title"
            android:summary="@string/double_tap_sleep_lockscreen_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="media_options_category"
        android:title="@string/media_options_category_title" >

        <org.candy.candyshop.preference.SystemSettingSwitchPreference
            android:key="lockscreen_media_metadata"
            android:title="@string/media_art_title"
            android:summary="@string/media_art_summary"
            android:defaultValue="true" />

        <org.candy.candyshop.preference.SystemSettingSeekBarPreference
            android:key="lockscreen_media_blur"
            android:title="@string/lockscreen_media_blur_title"
            android:max="100"
            settings:min="5"
            settings:units="%"
            settings:interval="5"
            android:defaultValue="100"
            android:dependency="lockscreen_media_metadata" />

        <Preference
            android:key="lockscreen_visualizer_enabled"
            android:title="@string/lockscreen_visualizer_enable"
            android:summary="@string/lockscreen_visualizer_enable_summary"
            android:fragment="org.candy.candyshop.fragments.lockscreen.LockScreenVisualizer" />

    </PreferenceCategory>

    <!--<PreferenceCategory
        android:key="sleep_controls_category"
        android:title="@string/sleep_controls_category_title" >

    </PreferenceCategory>-->

    <!--<PreferenceCategory
        android:id="@+id/lockscreen_security_category"
        android:key="lockscreen_security_category"
        android:title="@string/lockscreen_security_category_title" >

        </PreferenceCategory>-->

    <PreferenceCategory
        android:key="lockscreen_icons_category"
        android:title="@string/lockscreen_icons_category_title" >

        <org.candy.candyshop.preference.SecureSettingSwitchPreference
            android:key="hide_lockicon"
            android:title="@string/hide_lockicon_title"
            android:summary="@string/hide_lockicon_summary"
            android:defaultValue="false" />

        <Preference
            android:title="@string/lockscreen_tuner_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="fod_icon_picker"
        android:title="@string/fod_icon_picker_category_title" >

        <!-- FOD icon picker -->
        <Preference
            android:key="fod_icon_picker_category"
            android:icon="@drawable/ic_fp"
            android:title="@string/fod_icon_picker_title"
            android:summary="@string/fod_icon_picker_summary"
            android:fragment="org.candy.candyshop.fragments.lockscreen.FODIconPickerFragment" />

        <org.candy.candyshop.preference.SystemSettingSwitchPreference
            android:key="fod_icon_wallpaper_color"
            android:title="@string/fod_wallpaper_color"
            android:summary="@string/fod_wallpaper_color_summary"
            android:defaultValue="false" />

            <!-- FOD recognizing animation -->
        <org.candy.candyshop.preference.SystemSettingSwitchPreference
            android:key="fod_recognizing_animation"
            android:icon="@drawable/ic_fp"
            android:title="@string/fod_recog_animation"
            android:summary="@string/fod_recog_animation_summary"
            android:defaultValue="false" />

        <org.candy.candyshop.preference.SystemSettingListPreference
            android:key="fod_anim"
            android:icon="@drawable/ic_fp_animation"
            android:title="@string/fod_recog_animation_effect_title"
            android:summary="%s"
            android:entries="@array/fod_recog_animation_entries"
            android:entryValues="@array/fod_recog_animation_values"
            android:defaultValue="0"
            android:dependency="fod_recognizing_animation" />

        <org.candy.candyshop.preference.SystemSettingListPreference
            android:key="fod_pressed_state"
            android:icon="@drawable/ic_fp"
            android:dialogTitle="@string/fod_pressed_state_title"
            android:title="@string/fod_pressed_state_title"
            android:summary="%s"
            android:entries="@array/fod_pressed_state_entries"
            android:entryValues="@array/fod_pressed_state_values"
            android:defaultValue="2" />

        <Preference
            android:summary="@string/fod_pressed_state_footer" />

    </PreferenceCategory>

</PreferenceScreen>
